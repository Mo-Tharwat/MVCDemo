@model EmployeeViewModel
@{
    ViewData["Title"] = "Details";
}

<h1>Employee Details</h1>
<div class="row">
    <div class="col-6 col-lg-2">
        <img src="~/files/images/@Model.ImageName" class="img-fluid rounded" />
    </div>
    <div class="col-6 col-lg-10">
    <form class="my-5">
    
    <Partial name="EmployeePartialViews/DetailsDeletePartial" />

    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">Edit</a>
    <a asp-action="Index" class="btn btn-sm btn-outline-secondary">Back To List</a>
    </form>
    </div>
</div>
