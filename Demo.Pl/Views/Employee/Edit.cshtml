@model EmployeeViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Employee</h1>

<div class="row">
    <div class="col-6 col-lg-4">
        <img src="~/files/images/@Model.ImageName" class="img-fluid rounded" />
    </div>
    <div class="col-6 col-lg-8">
        <form class="my-5" asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div> @*Lists all Form Error Messages*@

            <Partial name="EmployeePartialViews/CreateEditPartial" />

            <input type="submit" value="submit" class="btn btn-sm btn-primary" />
            <a asp-action="Index" class="btn btn-sm btn-outline-secondary">Back To List</a>
        </form>
    </div>
</div>


@section ValidationScriptSection {
    <partial name="_ValidationScriptsPartial" />
}